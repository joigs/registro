            <td class="py-2 border border-gray-300 dark:border-slate-600 align-top">
              <details>
                <summary class="cursor-pointer select-none">
                  <%= show_name[cli_key] %>
                </summary>

                <% if is_mand %>
                  <ul class="mt-2 ml-4 list-disc">
                    <% (@empresas_por_mandante || {})[cli_key].to_a.each do |emp| %>
                      <% m_emp_uf = (@empresa_year || {}).fetch(emp, 0).to_d %>
                      <% next if m_emp_uf.zero? %>
                      <% c_emp   = (@empresa_year_count || {}).fetch(emp, 0).to_i %>
                      <% per_m   = mov_m_emp[emp] || {} %>
                      <% m_emp_clp = to_clp_total.(per_m).to_i %>
                      <li>
                        <%= emp %>:
                        <%= number_with_delimiter(m_emp_uf, delimiter: ".", separator: ",") %> UF
                        (<%= number_with_delimiter(m_emp_clp.round, delimiter: ".", separator: ",") %> CLP)
                        - <%= (c_emp) %> servicios
                      </li>
                    <% end %>
                  </ul>

                  <% alias_children = (@alias_empresas_por_mandante_year || {})[cli_key].to_a %>

                  <% mods_by_val = (@module_years || {}).except("Movilidad").map do |mod, hash|
                    val = hash[cli_key].to_d +
                      ((@empresas_por_mandante || {})[cli_key].to_a.sum { |e| hash[e].to_d }) +
                      (alias_children.sum { |e| hash[e].to_d })
                    [mod, val]
                  end.reject { |_,v| v.zero? } %>

                  <% unless mods_by_val.empty? %>
                    <ul class="mt-2 ml-4 list-disc">
                      <% mods_by_val.each do |mod, val_uf| %>
                        <% cnt = (@module_years_count || {}).fetch(mod, {}).fetch(cli_key, 0).to_i +
                          ((@empresas_por_mandante || {})[cli_key].to_a.sum { |e| (@module_years_count || {}).fetch(mod, {}).fetch(e, 0).to_i }) +
                          (alias_children.sum { |e| (@module_years_count || {}).fetch(mod, {}).fetch(e, 0).to_i }) %>

                        <% per_m =
                             if mod == "Transporte Vertical"
                               sum_months_many.call(
                                 vertical_m[cli_key] || {},
                                 sum_for_keys.call(vertical_m, (@empresas_por_mandante || {})[cli_key]),
                                 sum_for_keys.call(vertical_m, alias_children)
                               )
                             else
                               sum_months_many.call(
                                 eval_m[cli_key] || {},
                                 sum_for_keys.call(eval_m, (@empresas_por_mandante || {})[cli_key]),
                                 sum_for_keys.call(eval_m, alias_children)
                               )
                             end %>
                        <% val_clp = to_clp_total.(per_m).to_i %>

                        <li>
                          <%= mod %>:
                          <%= number_with_delimiter(val_uf, delimiter: ".", separator: ",") %> UF
                          (<%= number_with_delimiter(val_clp.round, delimiter: ".", separator: ",") %> CLP)
                          - <%= (cnt) %> servicios
                        </li>
                      <% end %>
                    </ul>
                  <% end %>

                <% else %>
                  <ul class="mt-2 ml-4 list-disc">
                    <% (@module_years || {}).each do |mod_name, hash| %>
                      <% v_mod = hash[cli_key].to_d %>
                      <% next if v_mod.zero? %>
                      <% cnt_mod = (@module_years_count || {}).fetch(mod_name, {}).fetch(cli_key, 0).to_i %>

                      <% per_m =
                           case mod_name
                           when "Transporte Vertical"        then vertical_m[cli_key] || {}
                           when "Evaluación de Competencias" then eval_m[cli_key]     || {}
                           when "Movilidad"                  then mov_m_emp[cli_key]  || {}  # normalmente 0 para empresas
                           else {}
                           end %>
                      <% v_mod_clp = to_clp_total.(per_m).to_i %>

                      <li>
                        <%= mod_name %>:
                        <%= number_with_delimiter(v_mod, delimiter: ".", separator: ",") %> UF
                        (<%= number_with_delimiter(v_mod_clp.round, delimiter: ".", separator: ",") %> CLP)
                        - <%= (cnt_mod) %> servicios
                      </li>
                    <% end %>
                  </ul>
                <% end %>
              </details>
            </td>

            <td class="py-2 border border-gray-300 dark:border-slate-600 text-center font-medium">
              <%= number_with_delimiter(cli_val.to_d, delimiter: ".", separator: ",") %> UF
              (<%= number_with_delimiter(cli_clp_total.round, delimiter: ".", separator: ",") %> CLP)
            </td>
            <td class="py-2 border border-gray-300 dark:border-slate-600 text-center font-medium">
              <%= (empresa_totales_cnt[cli_key].to_i) %>
