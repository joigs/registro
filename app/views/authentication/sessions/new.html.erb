<%= form_with(url: sessions_path, class: "max-w-lg mx-auto mt-10 bg-white p-8 border border-gray-300 rounded-lg shadow-lg") do |form| %>
  <div class="mb-6">
    <%= form.label :"Nombre de usuario", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :login, required: true, autofocus: true, maxlength: 100, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="mb-6">
    <%= form.label :"Contraseña", class: "block text-sm font-medium text-gray-700" %>
    <%= form.password_field :password, required: true, maxlength: 100, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <%= form.submit "Iniciar Sesión", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
<% end %>
